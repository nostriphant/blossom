{
    "name": "nostriphant/blossom",
    "description": "Blossom implementation in PHP",
    "homepage" : "https://github.com/nostriphant/blossom",
    "require": {
        "php": "^8.4",
        "nostriphant/functional": "^2.3"
    },
    
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "nostriphant\\Blossom\\": "src/"
        },
        "files": ["functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "nostriphant\\BlossomTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Rik Meijer",
            "email": "nostriphant@rikmeijer.nl"
        }
    ],
    "require-dev": {
        "ext-curl": "*",
        "pestphp/pest": "^4.0",
        "nikic/fast-route": "^1.3"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "clearCache": [
            "rm -rf ./data/files/*"
        ],
        "test": [
            "@clearCache @no_additional_args",
            "./vendor/bin/pest"
        ]
    }
}
